---
import { getCollection } from 'astro:content';
import LayoutBlog from '../../layouts/LayoutBlog.astro';

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const docEntries = await getCollection('doc');
  return docEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
const background = "bg-blue-300"
const whiteGradient = true
---
<LayoutBlog title={entry.data.title} description={entry.data.description} {background} {whiteGradient}>
    <Content />
</LayoutBlog>

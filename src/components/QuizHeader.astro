---
import ActionCard from './containers/ActionCard.astro';
---
<section class="bg-blue-accent relative items-center flex justify-center">
    <div
        class="mx-auto max-w-7xl items-center pt-12 lg:px-16 lg:pt-32 md:px-12 px-5 pb-8 lg:pb-32"
    >
        <div>
            <div class="text-white text-center">
                <p
                    class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl tracking-tighter font-medium"
                >
                Discover your <span class="block"
                        >Unique Writing Style</span
                    >
                </p>
            </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-16 mb-8">
            <ActionCard title="Complete the Test" description='Be Yourself and answer honeslty to find out your unique writing style'/>
            <ActionCard title="View Detailed Results" description='Get a prompt matching your personality'/>
            <ActionCard title="Unlock Your Potential" description='Get text matching your personality'/>
        </div>
    </div>
</section>